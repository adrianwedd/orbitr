# Orbitr Backend Security Configuration
# Copy this file to .env and update with your actual values

# API Authentication
# Generate a secure random string for production
API_KEY=your-secure-api-key-here

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://yourdomain.com

# Rate Limiting Configuration
# Requests per minute for generation endpoints
GENERATION_RATE_LIMIT=10
# Requests per minute for cache endpoints  
CACHE_RATE_LIMIT=30
# Requests per minute for health endpoints
HEALTH_RATE_LIMIT=60

# Resource Limits
# Maximum duration for audio generation (seconds)
MAX_GENERATION_DURATION=5.0
# Maximum prompt length (characters)
MAX_PROMPT_LENGTH=500
# Maximum concurrent generations
MAX_CONCURRENT_GENERATIONS=3
# Generation timeout (seconds)
GENERATION_TIMEOUT=30

# Request Limits
# Maximum request body size in bytes (10MB default)
MAX_REQUEST_SIZE=10485760

# Environment Mode
# Set to 'production' for production deployments
ENVIRONMENT=development
DEV_MODE=true

# Logging Configuration
LOG_LEVEL=info
ENABLE_ACCESS_LOGS=true

# Cache Configuration
CACHE_MAX_SIZE_MB=1000
CACHE_CLEANUP_INTERVAL=3600

# Security Headers
ENABLE_SECURITY_HEADERS=true
ENABLE_RATE_LIMIT_HEADERS=true